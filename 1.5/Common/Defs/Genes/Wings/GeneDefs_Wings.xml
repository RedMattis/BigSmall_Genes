    </modExtensions>
    <renderNodeProperties Inherit="False">
      <li>
        <parentTagDef>Body</parentTagDef>
        <texPath>BS_BodyAttachments/BS_DemonWingsc</texPath>
        <drawSize>(1.45,1.45)</drawSize>
        <colorType>Skin</colorType>
        <drawData>
          <defaultData>
