<Defs>

  <GeneDef ParentName="GeneJawBase">
    <defName>BS_GhoulHead</defName>
    <label>ghoulish head</label>
    <labelShortAdj>ghoulish</labelShortAdj>
    <description>Carriers of this gene have ghoulish heads.\n\nCan be overriden by jaw genes.</description>
    <iconPath>GeneIcons/BS_GhoulHeaded</iconPath>
    <displayOrderInCategory>200</displayOrderInCategory>
    <forcedHeadTypes>
      <li>Ghoul_Normal</li>
      <li>Ghoul_Heavy</li>
      <li>Ghoul_Narrow</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">Ghoul_Wide</li>
    </forcedHeadTypes>
    <modExtensions>
      <li Class="BigAndSmall.PawnExtension">
				<disableFacialAnimations>true</disableFacialAnimations>
			</li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="GeneHairStyleBase">
    <defName>BS_CreepyHaired</defName>
    <label>messy-haired</label>
    <labelShortAdj>messy</labelShortAdj>
    <description>Carriers of this gene grow creepy hair.</description>
    <iconPath>GeneIcons/BS_GhoulHaired</iconPath>
    <displayOrderInCategory>56</displayOrderInCategory>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>Cultist</li>
        <li>BS_Creepy</li>
      </tags>
    </hairTagFilter>
  </GeneDef>

  <!--Just a verion of the anomality hair with the gene needed instead of the race.-->
  <HairDef Abstract="True" Name="BS_GhoulHairBase">
    <requiredGene>BS_CreepyHaired</requiredGene>
    <styleGender>Any</styleGender>
    <styleTags>
			<li>VRE_HighmateHair</li>
			<!-- <li>Shaved</li> -->
			<li>Urban</li>
			<li>Punk</li>
			<li>Rural</li>
			<li>Tribal</li>
			<li>Soldier</li>
			<li>HairShort</li>
      <li>BS_Creepy</li>
		</styleTags>
  </HairDef>

  <HairDef ParentName="BS_GhoulHairBase">
    <defName>BS_Ghoul_Furious</defName>
    <label>furious</label>
    <texPath>Things/Pawn/Ghoul/Hairs/GhoulHair_Furious</texPath>
  </HairDef>

