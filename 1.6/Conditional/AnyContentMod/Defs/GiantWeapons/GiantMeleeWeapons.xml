    <thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="BS_GiantMeleeUltratech">
    <defName>BS_SurtrSword</defName>
    <label>Sword of Surtr</label>
    <description>An enormus one-handed sword with a blade wreathed in the barely-contained power of the sun. The sword burns, cuts, and melts through anything unfortunate enough to meet it's edge.\n\nThe sword is so large and heavy that even giants often struggle to wield it.</description>
    <weaponTags>
      <li>UltratechMeleeGiant_Fire</li>
    </weaponTags>
    <graphicData>
      <texPath>Item/BS_FireSwordGlow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>2.2</drawSize>
    </graphicData>
    <uiIconScale>1.1</uiIconScale>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <relicChance>3</relicChance>
    <statBases>
      <Mass>12</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>10</amount>
            <chance>0.75</chance>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>10</amount>
            <chance>0.5</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
		<possessionCount>1</possessionCount>
		<rotateInShelves>false</rotateInShelves>
		<tradeability>Sellable</tradeability>
	</ThingDef>

