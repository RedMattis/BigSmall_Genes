        <drawData>
          <defaultData>
            <layer>10</layer>
          </defaultData>
          <dataSouth>
            <layer>-1</layer>
          </dataSouth>
          <dataNorth>
            <layer>90</layer>
          </dataNorth>
        </drawData>
      </li>
      <li>
        <parentTagDef>Body</parentTagDef>
        <texPath>BS_BodyAttachments/BS_DemonTaila</texPath>
