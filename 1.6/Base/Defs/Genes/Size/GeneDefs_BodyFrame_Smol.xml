<Defs>
  
  <GeneDef ParentName="BodyFrameBase">
    <defName>DwarfFrame</defName>
    <label>Dwarf Frame</label>
    <description>Adults carriers of this gene are on the short but somewhat stout side.</description>
    <iconPath>GeneIcons/BS_Frames/Dwarf</iconPath>
    <displayOrderInCategory>1050</displayOrderInCategory>
    <biostatCpx>1</biostatCpx>
    <biostatMet>5</biostatMet>
    <statFactors>
      <MiningSpeed>0.95</MiningSpeed>
      <ConstructionSpeed>0.95</ConstructionSpeed>
      <MoveSpeed>0.79</MoveSpeed>
      <SM_RaidWealthMultiplier>0.6</SM_RaidWealthMultiplier>
    </statFactors>
    <statOffsets>
      <SM_BodySizeOffset>-0.35</SM_BodySizeOffset>
      <SM_RaidWealthOffset>-1000</SM_RaidWealthOffset>
    </statOffsets>
    <selectionWeight>0.4</selectionWeight>
    <marketValueFactor>1.0</marketValueFactor>
