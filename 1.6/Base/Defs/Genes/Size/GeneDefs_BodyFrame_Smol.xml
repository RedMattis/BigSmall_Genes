  <GeneDef ParentName="BodyFrameBase">
    <defName>GnomeFrame</defName>
    <label>Nisse Frame</label>
    <description>Carriers of this gene are tiny, but suprisingly nimble and capable for their size.</description>
    <exclusionTags>
      <li>Tiny</li>
    </exclusionTags>
    <iconPath>GeneIcons/BS_Frames/Diminutive</iconPath>
    <displayOrderInCategory>1052</displayOrderInCategory>
    <biostatCpx>3</biostatCpx>
    <biostatMet>10</biostatMet>
    <statOffsets>
      <SM_BodySizeOffset>-0.6</SM_BodySizeOffset>
      <SM_Cosmetic_BodySizeOffset>-0.10</SM_Cosmetic_BodySizeOffset>
      <SM_RaidWealthOffset>-2000</SM_RaidWealthOffset>
      <MeleeHitChance>5</MeleeHitChance>
    </statOffsets>
    <statFactors>
      <MiningSpeed>0.6</MiningSpeed>
      <DeepDrillingSpeed>0.6</DeepDrillingSpeed>
      <ConstructionSpeed>0.6</ConstructionSpeed>
      <MoveSpeed>0.8</MoveSpeed>
      <SM_RaidWealthMultiplier>0.4</SM_RaidWealthMultiplier>
    </statFactors>
    <selectionWeight>0.4</selectionWeight>
    <marketValueFactor>1.0</marketValueFactor>
    <!-- <modExtensions>
			<li Class="BigAndSmall.TattooStyleGeneExtension">
        <noTattoos>true</noTattoos>
			</li>
		</modExtensions> -->
  </GeneDef>
  
